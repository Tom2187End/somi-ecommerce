{% extends "shoop/admin/base.jinja" %}
{% from "shoop/admin/macros/general.jinja" import content_block %}
{% block title %}{% trans %}Theme Configuration{% endtrans %}{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-push-3">
                {% if theme_classes %}
                    {{ theme_table() }}
                {% else %}
                    <div class="alert alert-info">
                        No themes are installed.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% macro theme_table() %}
    <form method="post" id="theme_form">
        {% csrf_token %}
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <td>Theme</td>
                <td colspan="2">Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for theme in theme_classes %}
                <tr>
                    <td>
                        <b>{{ theme.name or theme.identifier }}</b>
                        {% if theme.author %}<br><small>{{ theme.author }}</small>{% endif %}

                    </td>
                    <td>
                        {% if current_theme and theme.identifier == current_theme.identifier %}
                            Currently active
                        {% else %}
                            <button name="activate" value="{{ theme.identifier }}" type="submit" class="btn btn-primary">
                                {% trans %}Activate{% endtrans %}
                            </button>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ url("shoop_admin:xtheme.config_detail", theme_identifier=theme.identifier) }}" class="btn btn-primary">
                            {% trans %}Configure...{% endtrans %}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </form>
{% endmacro %}
