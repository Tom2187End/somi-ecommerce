<select id="id_{{ name }}" name="{{ name }}" class="xtheme-model-choice-widget">
    {% for pk, object in objects %}
        {% set url = (shoop_admin.model_url(object, "detail") if pk else "") %}
        <option
            value="{{ pk }}"
            {% if pk == selected_value %}selected{% endif %}
            data-admin-url="{{ url }}"
         >{{ object }}</option>
    {% endfor %}
</select>
<div id="extra_for_id_{{ name }}"></div>
