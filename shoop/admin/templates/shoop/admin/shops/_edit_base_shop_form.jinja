{% from "shoop/admin/macros/general.jinja" import content_block %}
{% from "shoop/admin/macros/multilanguage.jinja" import language_dependent_content_tabs, render_monolingual_fields %}
{% set base_form = form["base"] %}

{% call content_block(_("General Information")) %}
    {{ language_dependent_content_tabs(base_form, exclude=["maintenance_message"]) }}
    <div class="form-divider"></div>
    {{ render_monolingual_fields(base_form, exclude=["maintenance_mode", "logo"]) }}
{% endcall %}
{% call content_block(_("Shop Logo"), icon="fa-image") %}
    {{ render_monolingual_fields(base_form, field_names=["logo"]) }}
{% endcall %}
{% call content_block(_("Maintenance Mode"), icon="fa-cogs") %}
    {{ render_monolingual_fields(base_form, field_names=["maintenance_mode"]) }}
    {{ language_dependent_content_tabs(base_form, field_names=["maintenance_message"], tab_id_prefix="maint") }}
{% endcall %}
