<div class="hidden-xs">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>{% trans %}Date{% endtrans %}</th>
            <th>{% trans %}Identifier{% endtrans %}</th>
            <th>{% trans %}Description{% endtrans %}</th>
            <th class="text-right">{% trans %}Amount{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.created_on|datetime }}</td>
                <td>{{ payment.payment_identifier }}</td>
                <td>{{ payment.description }}</td>
                <td class="text-right">{{ payment.amount|home_currency }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="visible-xs mobile-list-group">
    <ul class="list-group">
        {% for payment in payments %}
            <li class="list-group-item">
                <div class="row">
                    <div class="col-xs-8">
                        {{ payment.created_on|datetime }}<br>
                        {{ payment.description }}<br>
                        Identifier: {{ payment.payment_identifier }}
                    </div>
                    <div class="col-xs-4 text-right">
                        <strong>{{ payment.amount|home_currency }}</strong>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
