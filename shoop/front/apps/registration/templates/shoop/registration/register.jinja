{% extends "shoop/front/base.jinja" %}
{% from "shoop/front/macros.jinja" import render_field %}
{% block content %}

    <div class="row">
        <div class="col-sm-8 col-sm-push-2 col-md-6 col-md-push-3">
            <h1 class="page-header text-center">
                {% trans %}Registration{% endtrans %}
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-push-2 col-md-6 col-md-push-3">
            <div class="well">
                <form method="post">
                    {% csrf_token %}
                    {% for field in form.hidden_fields() %}{{ field|safe }}{% endfor %}
                    {% for field in form.visible_fields() %}{{ render_field(field) }}{% endfor %}
                    <button type="submit" class="btn btn-primary btn-block"><i class="glyphicon glyphicon-ok"></i> {% trans %}Register{% endtrans %}</button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
