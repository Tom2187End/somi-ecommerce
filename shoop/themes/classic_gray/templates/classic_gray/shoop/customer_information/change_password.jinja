{% extends "shoop/front/base.jinja" %}
{% block title %}{% trans %}Change Password{% endtrans %}{% endblock %}
{% block content_title %}{% trans %}Change Password{% endtrans %}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="/">{% trans %}Home{% endtrans %}</a></li>
        <li class="active">{% trans %}Change password{% endtrans %}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="user-account">
        <form role="form" method="post" action="">
            <div class="btn-toolbar pull-right" role="toolbar">
                <div class="btn-group" role="group">
                    <a class="btn btn-info" href="{{ url("shoop:customer_edit") }}">
                        <i class="fa fa-user"></i> {% trans %}Edit user account information{% endtrans %}
                    </a>
                </div>
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> {% trans %}Save password{% endtrans %}</button>
                </div>
            </div>
            <div class="clearfix"></div>
            {% csrf_token %}
            <div class="well">
                <fieldset>
                    {% for field in form.visible_fields() %}
                        {{ macros.render_field(field) }}
                    {% endfor %}
                </fieldset>
            </div>
            <div class="btn-toolbar pull-right" role="toolbar">
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> {% trans %}Save password{% endtrans %}</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
{% endblock %}
