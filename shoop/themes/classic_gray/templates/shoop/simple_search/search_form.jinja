<button id="search-modal-toggler" type="button" data-toggle="modal" data-target="#search-modal"><i class="fa fa-search menu-icon"></i> <span class="hidden-xs">{% trans %}Search{% endtrans %}</span></button>
<div class="search-modal fade" id="search-modal" tabindex="-1" role="dialog" aria-labelledby="search-modal-label">
    <div class="search-modal-dialog" role="document">
        <h2 class="search-modal-title" id="search-modal-label">{% trans %}Search for products{% endtrans %}</h2>
        <form method="get" class="search-input" action="{{ url("shoop:product_search") }}" role="search" value="{{ q or "" }}">
            <input id="site-search" name="q" type="search" class="form-control" placeholder="{% trans %}Search for products{% endtrans %}">
            <button class="btn" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </form>
    </div>
</div>
