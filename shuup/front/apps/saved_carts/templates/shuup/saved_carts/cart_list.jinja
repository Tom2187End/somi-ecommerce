{% extends "shuup/front/base.jinja" %}

{% block title -%}
    {{ _("Saved Carts") }}
{%- endblock %}

{% block content %}
    <h1 class="page-header">
        {{ _("Saved Carts") }}
    </h1>

    {% if carts %}
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>{{ _('Title') }}</th>
                    <th class="text-right">{{ _('Product Count') }}</th>
                    <th></th>
                </tr>
                {% for cart in carts %}
                    <tr>
                        <td>{{ cart.title }}</td>
                        <td class="text-right">{{ cart.product_count }}</td>
                        <td class="text-right">
                            <a href="{{ url("shuup:saved_cart.detail", pk=cart.pk) }}">
                                <i class="fa fa-search"></i> {% trans %}Details{% endtrans %}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <p class="lead">
            <i class="fa fa-info-circle text-info"></i> {% trans %}You haven't saved any carts yet.{% endtrans %}
        </p>
    {% endif %}
{% endblock %}
