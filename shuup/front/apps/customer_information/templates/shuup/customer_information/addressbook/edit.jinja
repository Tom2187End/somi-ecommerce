{% extends "shuup/front/dashboard/dashboard.jinja" %}
{% from "shuup/customer_information/macros/buttons.jinja" import save_changes_button %}

{% block title %}{% trans %}Address Book{% endtrans %}{% endblock %}
{% block content_title %}{% trans %}Address Book{% endtrans %}{% endblock %}

{% block breadcrumb %}
    {% call macros.breadcrumb() %}
        {{ macros.render_breadcrumb_item("/", _("Home")) }}
        {{ macros.render_breadcrumb_item(url("shuup:dashboard"), _("Dashboard")) }}
        {{ macros.render_breadcrumb_item(None,  _("Address Book"), True) }}
    {% endcall %}
{% endblock %}

{% block dashboard_content %}
{% set address_form = form["address"] %}
{% set saved_form = form["saved_address"] %}
<form method="post">
    {% csrf_token %}
    <div class="row">
        <div class="col-md-12">
            <div class="title">{% trans %}General Information{% endtrans %}</div>
            {{ bs3.field(saved_form.title) }}
            {{ bs3.field(saved_form.role) }}
            {{ bs3.field(saved_form.status) }}
        </div>
        <div class="col-md-6">
            <div class="title">{% trans %}Contact Information{% endtrans %}</div>
            {{ bs3.field(address_form.name) }}
            {{ bs3.field(address_form.company_name) }}
            {{ bs3.field(address_form.phone) }}
            {{ bs3.field(address_form.email) }}
        </div>
        <div class="col-md-6">
            <div class="title">{% trans %}Address{% endtrans %}</div>
            {{ bs3.field(address_form.street) }}
            {{ bs3.field(address_form.city) }}
            {{ bs3.field(address_form.region) }}
            {{ bs3.field(address_form.region_code) }}
            {{ bs3.field(address_form.postal_code) }}
            {{ bs3.field(address_form.country) }}
        </div>
    </div>
    <div class="btn-toolbar pull-right" role="toolbar">
       {{ save_changes_button() }}
    </div>
</form>
{% endblock %}
