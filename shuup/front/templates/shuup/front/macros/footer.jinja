{% extends "shuup/front/macros/theme/footer.jinja" %}
{% macro render_footer() %}
    <footer>
        <div class="container">
            {% placeholder "footer" global %}
                {% column {"sm": 4} %}
                    {% plugin "simple_cms.page_links" %}
                        title = "Pages"
                    {% endplugin %}
                {% endcolumn %}
                {% column {"sm": 3} %}
                    {% plugin "category_links" %}
                        title = "Categories"
                    {% endplugin %}
                {% endcolumn %}
                {% column {"sm": 3} %}
                    {% plugin "text" %}
                        text = "## Custom Footer Content"
                    {% endplugin %}
                {% endcolumn %}
            {% endplaceholder %}
        </div>
    </footer>
{% endmacro %}
