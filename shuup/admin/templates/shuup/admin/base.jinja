<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Shuup &dash; {% block title -%}
            {% if title %}{{ title }}
            {% elif view and view.title %}{{ view.title }}{% endif %}
        {%- endblock %}
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% if request.GET.autoRefresh %}
            <meta http-equiv="refresh" content="{{ request.GET.autoRefresh }}"/>
        {% endif %}
        {%- set favicon = request.shop.favicon.url if request.shop.favicon else static("shuup/front/img/favicon.ico") -%}
        <link rel="icon" type="image/x-icon" href="{{ favicon }}">
        <link href="{{ shuup_static("shuup_admin/css/base.css") }}" rel="stylesheet" type="text/css">
        {% block extra_css %}{% endblock -%}
        {% block extra_head %}{% endblock -%}
        {% set conf = shuup_admin.get_config() %}
        <script>var ShuupAdminConfig = {{ conf|json }};</script>
        <script type="text/javascript" src="{{ url("shuup_admin:js-catalog") }}?lang={{ LANGUAGE_CODE }}&v={{ get_shuup_version() }}"></script>

        {% set admin_theme = get_current_admin_theme(request) or None %}    
        {% if admin_theme and admin_theme.active %}
            <style>
                {% macro render_font_face(font) %}
                    @font-face {
                        font-family: '{{- font.name -}}';
                        {% if font.eot -%}src: url('{{ font.eot.url }}');{%- endif %}
                        src: {% for font_source in font.get_font_sources() -%}
                            {{- font_source|safe -}}{%- if loop.last -%};{%- else -%},{%- endif -%}
                        {%- endfor %}
                    }
                {% endmacro%}
                
                {% set header_font = admin_theme.admin_header_font or None %}
                {% set body_font = admin_theme.admin_body_font or None %}
                {%- if body_font %}
                    {{ render_font_face(body_font) }}
                {% endif -%}
                {%- if header_font %}
                    {{ render_font_face(header_font) }}
                {% endif -%}

                :root{
                    {% if admin_theme.primary_color %}
                        --primary: {{ admin_theme.primary_color }};
                        --primary-light: {{ admin_theme.primary_color }}70;
                        --primary-very-light: {{ admin_theme.primary_color }}20;
                        --primary-lighter: {{ admin_theme.primary_color }}50;
                        --primary-lightest: {{ admin_theme.primary_color }}30;
                        --primary-opaque: {{ admin_theme.primary_color }}10;
                        --primary-dark: {{ colorscale(admin_theme.primary_color, 0.88) }};
                    {% endif %}
                    {% if admin_theme.secondary_color %}
                        --secondary: {{ admin_theme.secondary_color }};
                        --secondary-light: {{ admin_theme.secondary_color }}70;
                        --secondary-very-light: {{ admin_theme.secondary_color }}20;
                        --secondary-lighter: {{ admin_theme.secondary_color }}50;
                        --secondary-lightest: {{ admin_theme.secondary_color }}30;
                        --secondary-opaque: {{ admin_theme.secondary_color }}10;
                        --secondary-dark: {{ colorscale(admin_theme.secondary_color, 0.88) }};
                    {% endif %}
                    {% if admin_theme.success_color %}
                        --success: {{ admin_theme.success_color }};
                        --success-light: {{ admin_theme.success_color }}70;
                        --success-lighter: {{ admin_theme.success_color }}50;
                        --success-lightest: {{ admin_theme.success_color }}30;
                        --success-very-light: {{ admin_theme.success_color }}20;
                        --success-opaque: {{ admin_theme.success_color }}10;
                        --success-dark: {{ colorscale(admin_theme.success_color, 0.88) }};
                    {% endif %}
                    {% if admin_theme.danger_color %}
                        --danger: {{ admin_theme.danger_color }};
                        --danger-light: {{ admin_theme.danger_color }}70;
                        --danger-lighter: {{ admin_theme.danger_color }}50;
                        --danger-lightest: {{ admin_theme.danger_color }}30;
                        --danger-very-light: {{ admin_theme.danger_color }}20;
                        --danger-opaque: {{ admin_theme.danger_color }}10;
                        --danger-dark: {{ colorscale(admin_theme.danger_color, 0.88) }};
                        --danger-darker: {{ colorscale(admin_theme.danger_color, 0.80) }};
                    {% endif %}
                    {% if admin_theme.danger_color %}
                        --text-color: {{ admin_theme.text_color }};
                        --text-color-light: {{ admin_theme.text_color }}70;
                        --text-color-lighter: {{ admin_theme.text_color }}50;
                        --text-color-lightest: {{ admin_theme.text_color }}30;
                        --text-color-very-light: {{ admin_theme.text_color }}20;
                        --text-color-opaque: {{ admin_theme.text_color }}10;
                        --text-color-dark: {{ colorscale(admin_theme.text_color, 0.88) }};
                    {% endif %}
                }
                
                {%- if admin_theme.base_font_size %}
                    html {
                        font-size: {{ admin_theme.base_font_size }}!important;
                    }
                {% endif -%}

                h1, h2, h3, h4, h5, h6{
                    {% if header_font and header_font.css_value %}
                        font-family: Open Sans, sans-serif;
                        {% if header_font.css_value %}
                        {{ header_font.css_value }}
                        {% endif %}
                    {% elif header_font and not header_font.css_value %}
                        font-family: '{{ header_font.name }}';
                    {% else %}
                        font-family: Open Sans,sans-serif;
                    {% endif %}
                }
                body{
                    {% if body_font and body_font.css_value %}
                        font-family: Open Sans, sans-serif;
                        {% if body_font.css_value %}
                        {{ body_font.css_value }}
                        {% endif %}
                    {% elif body_font and not body_font.css_value %}
                        font-family: '{{ body_font.name }}';
                    {% else %}
                        font-family: Open Sans,sans-serif;
                    {% endif %}
                }
            </style>
        {% endif %}
        
    </head>
    <body class="{% block body_class %}{% endblock %} {{ "popup" if request.GET.popup else "" }}{% if not conf["menuOpen"] %} desktop-menu-closed{% endif %}">
        {% if iframe_close %}
            <script>
                {% if quick_add_target %}
                    parent.window.addToSelect2('{{ quick_add_target }}', '{{ quick_add_option_id }}', '{{ quick_add_option_name }}');
                {% elif quick_add_callback %}
                    parent.window.{{ quick_add_callback}}('{{ quick_add_option_id }}', '{{ quick_add_option_name }}');
                {% else %}
                    parent.window.closeQuickIFrame();
                {% endif %}
            </script>
        {% else %}
        {% block top %}
            {% if not iframe_mode %}
                <header class="d-flex justify-content-center align-items-center site-search-nav" id="top-header">{% include "shuup/admin/base/_navigation.jinja" %}</header>
                {% include "shuup/admin/base/_main_menu.jinja" %}
            {% endif %}
        {% endblock %}
        {% block support_content %}
            <div class="support-nav-wrap{% if iframe_mode %} iframe-mode{% endif %}">
                <div class="flex-wrapper active-shop-and-supplier-info">
                {% if shuup_admin.is_multishop_enabled() %}
                    <h3>{% trans %}Active shop:{% endtrans %} <strong>{{ shuup_admin.get_admin_shop().name }}</strong></h3>
                {% endif %}
                {% if shuup_admin.is_multiple_suppliers_enabled() %}
                    {% set supplier = shuup_admin.get_admin_supplier() %}
                    {% if supplier %}
                        <h3>{% trans %}Active vendor:{% endtrans %} <strong>{{ supplier.name }}</strong></h3>
                    {% endif %}
                {% endif %}
                </div>
                <div class="support-nav">
                    {% block breadcrumbs -%}
                        {% if not iframe_mode %}
                            {% set breadcrumbs = breadcrumbs or shuup_admin.get_breadcrumbs() %}
                            {%- if breadcrumbs -%}
                                {% from "shuup/admin/macros/breadcrumbs.jinja" import render_breadcrumbs with context %}
                                {{ render_breadcrumbs(breadcrumbs) }}
                            {%- endif -%}
                        {% endif %}
                    {%- endblock %}
                    <div class="flex-wrapper">
                        <h1 class="main-header">{% block header %}{{ self.title() }}{% endblock %}</h1>
                        <div class="page-actions">
                            {%- block action_buttons -%}
                                {%- if toolbar -%}{{ toolbar.render_to_string(request)|safe }}{%- endif -%}
                            {%- endblock -%}
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block content_wrap %}
        <main id="main-content"{% if iframe_mode %}class="iframe-mode"{% endif %}>
            {% block content %}{% endblock %}
        </main>
        {% block scroll_top_button %}<div id="scroll-to-top"></div>{% endblock %}
        {% endblock %}
        {% block post_content %}{% endblock %}
        {% endif %}

        <script src="{{ shuup_static('shuup_admin/js/vendor.js') }}"></script>
        <script src="{{ shuup_static('shuup_admin/js/base.js') }}"></script>

        {% block init_scripts %}
        <script>
            if (window.ShuupAdminEditors) {
                window.ShuupAdminEditors.activateEditors(".summernote-editor");
            }
        </script>
        {% endblock %}

        {% block extra_js %}{% endblock %}

        {% block messages %}
            {% if messages %}
            <script>
                (function(){
                    if(!window.Messages) return;
                    {% for message in messages -%}Messages.enqueue({
                        tags: {{ message.tags|json }},
                        text: {{ message.message|json }}
                    });{% endfor %}
                }());
            </script>
            {% endif %}
        {% endblock %}

        {% block tour %}
            <script>$(function() {window.runTour();});</script>
        {% endblock %}
    </body>
</html>
