{% macro link_block(b, redirect="") %}
    <div class="row content-block link-block clearfix {{ b.css_class }} ">
        {% if b.icon_url %}
            <div class="pull-left">
                <div class="icon">
                    <img src="{{ static(b.icon_url) }}">
                </div>
            </div>
        {% endif %}
        {% if b.done %}
            <div class="pull-right done-icon">
                <i class="fa fa-check-circle"></i>
            </div>
        {% endif %}
        <div class="content {% if b.icon_url %}content-with-logo{% endif %}">
            <div class="text">
                <h3>{{ b.text }}</h3>
                {% if b.description %}
                    <p class="description">{{ b.description }}</p>
                {% endif %}
            </div>
            <div class="action">
                {% for action in b.actions %}
                    {% if action.method == "POST" %}
                        <form method="POST" action="{{ action.url }}">
                            {% csrf_token %}
                            {% for name in action.data %}
                                <input type="hidden" name="{{ name }}" value="{{ action.data[name] }}">
                            {% endfor %}
                            <input type="submit" class="btn btn-primary {% if not b.css_class %}btn-inverse{% endif %}" value="{{ action.text }}">
                        <form>
                    {% else %}
                        <a class="btn btn-primary {% if not b.css_class %}btn-inverse{% endif %}"
                            href="{{ action.url }}{% if redirect and not action.no_redirect %}?redirect={{ redirect }}{% endif %}">{{ action.text }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}
