<div class="scroll-inner-content">
    <ul class="menu-list">
        {% for category in shuup_admin.get_menu_entry_categories() %}
        {% set only_entry = (category.entries|first if category.entries|length == 1 else None) %}
        <li>
            {% if not only_entry %}
                <a href="#">
                    <i class="{{ category.icon }}"></i>
                    <span class="item-name parent">{{ category.name }}</span>
                    <span class="menu-toggle-icon"></span>
                </a>
                <ul>
                    {% for entry in category %}
                    <li>
                        <a href="{{ entry.url }}">
                            {{ entry.text }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            {% else %}
                {% for entry in category %}
                <a href="{{ entry.url }}">
                    {% if entry.icon %}<i class="{{ entry.icon }}"></i>{% endif %}
                    <span class="item-name">{{ entry.text }}</span>
                </a>
                {% endfor %}
            {% endif %}
        </li>
        {% endfor %}
    </ul>
</div>
