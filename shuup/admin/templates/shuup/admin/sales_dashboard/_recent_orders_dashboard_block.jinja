<div class="color-block block-red">
    <h2 class="block-title">{% trans %}Recent Orders{% endtrans %}</h2>
    <div class="block-content">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>{% trans %}Order{% endtrans %}</th>
                        <th>{% trans %}Customer{% endtrans %}</th>
                        <th class="text-right">{% trans %}Total{% endtrans %}</th>
                        <th>{% trans %}Order Date{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td class="text-nowrap"><a href="{{ shuup_admin.model_url(order, 'detail') }}">{{ order.id }}</a></td>
                            <td class="text-nowrap">{{ order.get_customer_name() }}</td>
                            <td class="text-right text-nowrap">{{ order.taxful_total_price|money }}</td>
                            <td class="text-nowrap">{{ order.order_date|datetime }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
