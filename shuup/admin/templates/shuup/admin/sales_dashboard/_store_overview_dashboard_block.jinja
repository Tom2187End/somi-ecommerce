{% macro render_row(label, dict) %}
    <tr>
        <td>{{ label }}</td>
        <td class="text-right">{{ dict["sales"]|money }}</td>
        <td class="text-right">{{ dict["num_orders"] }}</td>
        <td class="text-right">{{ dict["num_customers"] }}</td>
    </tr>
{% endmacro %}

<div class="color-block block-green">
    <div class="block-header">
        <div class="text-wrap">
            <span>{% trans %}Store Overview{% endtrans %}</span>
        </div>
    </div>
    <div class="block-content">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th class="text-right">{% trans %}Sales{% endtrans %}</th>
                    <th class="text-right">{% trans %}Orders{% endtrans %}</th>
                    <th class="text-right">{% trans %}Customers{% endtrans %}</th>
            </thead>
            <tbody>
                {{ render_row(_("Today"), daily) }}
                {{ render_row(_("MTD"), mtd) }}
                {{ render_row(_("YTD"), ytd) }}
                {{ render_row(_("Totals"), totals) }}
            </tbody>
        </table>
    </div>
</div>
